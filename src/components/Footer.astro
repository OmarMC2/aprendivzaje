//const GITHUB_URL = "https://github.com/your-username"; // Reemplaza con tu usuario
const LINKEDIN_URL = "https://www.linkedin.com/in/omar-mijangos-8a5048225/"; // Reemplaza con tu usuario
---

<footer>
  <div class="footer-content">
    <div class="copyright">
      &copy; {today.getFullYear()} Aprendizaje. Todos los derechos reservados.
    </div>
    <div>
      
    </div>
    <div class="social-links">
     <!--  <a href={GITHUB_URL} target="_blank" rel="noopener noreferrer">GitHub</a>-->
      <a href={LINKEDIN_URL} target="_blank" rel="noopener noreferrer">LinkedIn</a>
      <!-- Agrega más enlaces a redes sociales aquí -->
    </div>
  </div>
</footer>

<style>
  footer {
    padding: 2em 1em;
    background-color: var(--bg-light);
    border-top: 1px solid var(--border-color);
    color: var(--text-secondary);
    text-align: center;
    margin-top: 4em;
  }
  .footer-content {
    max-width: 720px;
    margin: auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1em;
  }
  .copyright {
    flex-grow: 1;
    text-align: left;
  }
  .social-links {
    display: flex;
    gap: 1.5em;
    justify-content: center;
  }
  .social-links a {
    color: var(--text-secondary);
    text-decoration: none;
    transition: color 0.2s ease;
  }
  .social-links a:hover {
    color: var(--accent);
  }

  @media (max-width: 720px) {
    .footer-content {
      flex-direction: column;
      text-align: center;
    }
    .copyright {
      text-align: center;
      margin-bottom: 1em;
    }
  }
</style>

