---

import HeaderLink from './HeaderLink.astro';
import ThemeToggle from './ThemeToggle.astro';
---
<header>
  <nav>
    <div class="brand">
      <a href="/"><img src="/aprendivzaje-logo.png" alt="logo aprendivzaje" class="logo"></a>
    </div>
    <div class="nav-links">
      <HeaderLink href="/">Inicio</HeaderLink>
      <HeaderLink href="/about">Acerca de</HeaderLink>
      <HeaderLink href="/tags">Tags</HeaderLink>
      <ThemeToggle />
    </div>
    <div class="hamburger">
      <span class="line"></span>
      <span class="line"></span>
      <span class="line"></span>
    </div>
  </nav>
</header>

<style>
  header {
    margin: 0;
    padding: 1em;
    background-color: var(--bg-secondary);
    border-bottom: 1px solid var(--border-color);
    box-shadow: var(--box-shadow);
    position: sticky;
    top: 0;
    z-index: 100;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 720px;
    margin: auto;
  }
  .brand a {
    font-size: 1.2em;
    font-weight: 700;
    color: var(--text-main);
    text-decoration: none;
  }
  .brand a:hover {
    color: var(--accent);
    text-decoration: none;
  }
  .nav-links {
    display: none;
    align-items: center;
    gap: 1em;
    text-decoration: none;
  }
  .nav-links.expanded {
    display: flex;
  }
  .hamburger {
    display: none;
    cursor: pointer;
  }
  .hamburger .line {
    display: block;
    width: 25px;
    height: 3px;
    margin: 5px;
    background-color: var(--text-main);
  }
  @media (min-width: 640px) {
    .nav-links {
      display: flex;
    }
    .hamburger {
      display: none;
    }
  }
  @media (max-width: 639px) {
    .nav-links {
      display: none;
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background-color: var(--bg-secondary);
      flex-direction: column;
      padding: 1em;
      border-bottom: 1px solid var(--border-color);
    }
    .hamburger {
      display: block;
    }
  }
</style>

<script>
  document.querySelector('.hamburger')?.addEventListener('click', () => {
    document.querySelector('.nav-links')?.classList.toggle('expanded');
  });
</script>
